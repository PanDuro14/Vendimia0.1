<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Un TextView arriba para referencia -->
    <TextView
        android:id="@+id/TextoSeguridad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texto de ejemplo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp" />

    <!-- En tu layout fragment_seguridad.xml -->



    <!-- BotÃ³n circular -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSeguridad"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="#2FDB33"
        android:text="B"
        android:textColor="@android:color/white"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TextoSeguridad" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTemperatura"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:backgroundTint="#2FDB33"
        android:text="B"
        android:textColor="@android:color/white"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TextoSeguridad"
        app:layout_constraintVertical_bias="0.676" />

</androidx.constraintlayout.widget.ConstraintLayout>
